<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/gray0"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/pager_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

            </android.support.v4.view.ViewPager>


        </FrameLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_slider"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabMaxWidth="20dp"
            app:tabMinWidth="20dp"
            app:tabIndicatorHeight="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            app:tabBackground="@drawable/tab_indicator"


            >

        </android.support.design.widget.TabLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/card_furniture"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/colorPrimary"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:descendantFocusability="blocksDescendants"
                        android:clickable="false"
                        android:longClickable="false"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="8dp"
                            android:src="@drawable/afsh"
                            android:clickable="false"
                            android:longClickable="false"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            tools:ignore="RtlCompat"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:text="@string/moving_furniture"
                            android:clickable="false"
                            android:longClickable="false"

                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_container"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/hawyat"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:descendantFocusability="blocksDescendants"
                        android:clickable="false"
                        android:longClickable="false"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="8dp"
                            android:src="@drawable/hawyat"
                            android:padding="5dp"
                            android:clickable="false"
                            android:longClickable="false"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            tools:ignore="RtlCompat"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:text="@string/containers"
                            android:clickable="false"
                            android:longClickable="false"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

</ScrollView>